// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  name      String
  price     Int      // en céntimos (79€ => 7900) para precisión
  currency  String   @default("EUR")
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // si luego usas Supabase Auth puro, este puede no usarse
  role      String   @default("customer") // admin | customer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
